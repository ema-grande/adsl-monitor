#!/bin/bash
# Database conf info

deps="mysql"
for p in $deps; do
	command -v $p > /dev/null || {
		echo "This script need \"$p\""
	exit 1
	}
done


# DB info
DBHOST=127.0.0.1
DBUSER="adsl"
DBNAME="adsl"

# Tables name - this must be the same as /application/model/model.php
DROPTABLE="DROPS"
PINGTABLE="PING"
SPEEDTABLE="SPEED"

TARGET1=8.8.8.8			# target ping Google DNS
TARGET2=208.67.222.222	# target ping OpenDNS
REFRESH=2 				# sleep time
PINGTOP=400				# TODO: read from /application/conf/conf.php
PINGOPT="-c1 -W3"		# Send 1 ping wait at least 3 seconds